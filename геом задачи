задача 1
#include <iostream> 
#include <cmath>
using namespace std;
int main () {
    int n[3][2];
    for (int i = 0; i < 3; i++) {
        cout << "координаты ввести" << i << " (x y) ";
        cin >> n[i][0] >> n[i][1];
    }
    double x1 = n[0][0], y1 = n[0][1];
    double x2 = n[1][0], y2 = n[1][1];
    double x3 = n[2][0], y3 = n[2][1];

    double S = 0.5 * fabs(x1*(y2 - y3) + x2*(y3 - y1) + x3*(y1 - y2));
    cout << "площадь" << S << endl;
    return 0;
}

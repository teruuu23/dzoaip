задание 1
#include <iostream>
#include <cstring>
#include <cctype>  

using namespace std;

int main() {
    const int size = 256;
    char input[size];

    cout << "ââåäèòå ñòðîêó äëÿ ïðîâåðêè: ";
    cin.getline(input, size);

    int left = 0;
    int right = strlen(input) - 1;
    bool isPalindrome = true;

    while (left < right && isPalindrome) {
        while (left < right && input[left] == ' ') {
            left++;
        }
        while (left < right && input[right] == ' ') {
            right--;
        }

        if (tolower(input[left]) != tolower(input[right])) {
            isPalindrome = false;
        }

        left++;
        right--;
    }
    if (isPalindrome) {
        cout << "ñòðîêà ÿâëÿåòñÿ ïàëèíäðîìîì" << endl;
    }
    else {
        cout << "ñòðîêà ÍÅ ÿâëÿåòñÿ ïàëèíäðîìîì" << endl;
    }

    return 0;
}
